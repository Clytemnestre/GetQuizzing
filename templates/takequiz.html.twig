{% extends "learnersmaster.html.twig" %}
{% block content %}
    taking the quiz
    <form type="post">
        {% for question in questionList %}
            <span name="questionID">{{question.ID}}</span>
            <p>{{question.body}}</p>
            <input type="radio" name="option" value="c1">
            <p>{{question.c1}}</p>
            <input type="radio" name="option" value="c2">
            <p>{{question.c2}}</p> 
            <input type="radio" name="option" value="c3">
            <p>{{question.c3}}</p>
            <input type="radio" name="option" value="c4">
            <p>{{question.c4}}</p>            
            <hr>
        {% endfor %}
        <input type="submit">
    </form>
{% endblock %}
